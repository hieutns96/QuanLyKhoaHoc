@model WebQLKhoaHoc.NganHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 class="text-center">Ngân hàng nhà khoa học</h1>
        <hr />
        @Html.ValidationSummary(true)
      
        <div class="form-group">
            <div class="col-md-2 col-md-offset-1">
                <h2>Tên ngân hàng</h2>
            </div>
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.TenNH, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.TenNH)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 col-md-offset-1">
                <h2>Tên tiếng anh</h2>
            </div>
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.TenTiengAnh, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.TenTiengAnh)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 col-md-offset-1">
                <h2>Tên viết tắt</h2>
            </div>
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.TenVietTat, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.TenVietTat)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 col-md-offset-1">
                <h2>Website</h2>
            </div>
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.Website, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Website)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Tạo" class="btn btn-default pull-right" />
            </div>
        </div>
    </div>
}



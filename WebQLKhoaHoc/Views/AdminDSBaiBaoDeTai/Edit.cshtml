@model WebQLKhoaHoc.DSBaiBaoDeTai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.MaTT)
    <div class="form-horizontal">
        <h1 class="text-center">Bài báo về đề tài</h1>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-2 col-md-offset-1">
                <h2>Tên bài báo</h2>
            </div>
            <div class="col-md-7">
                @Html.DropDownList("MaBaiBao", ViewBag.MaBaiBao as SelectList, new { @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 col-md-offset-1">
                <h2>Tên đề tài</h2>
            </div>
            <div class="col-md-7">
                @Html.DropDownList("MaDeTai", ViewBag.MaDeTai as SelectList, new { @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 col-md-offset-1">
                <h2>Ghi chú</h2>
            </div>
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.GhiChu, new { @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Lưu" class="btn btn-default pull-right" />
            </div>
        </div>
    </div>
}

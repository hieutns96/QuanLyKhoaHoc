@model IEnumerable<WebQLKhoaHoc.NguoiDung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
    
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <p style="color: red">@ViewBag.Error</p>
            <div class="">
                <h2>
                    Danh Sách Người Dùng
                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li class="dropdown">
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                @Html.ActionLink("Create New", "Create", "AdminNguoiDung")
                            </li>
                        </ul>
                    </li>

                </ul>
              
            </div>
            <div class="x_content">
                <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <!-- list component  -->
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                                <thead>
                                    <tr role="row">
                                        <th>Chức Năng</th>
                                        <th>Tên Tài Khoản</th>
                                        <th>Họ Tên</th>
                                        <th>Vai Trò</th>
                                        <th>Trạng Thái</th>
                                        <th>Thay Đổi Trạng Thái</th>
                                    </tr>
                                </thead>

                                <!-- grid nkh  -->
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr role="row" class="even">
                                        @{ string status = item.IsActive.HasValue ? item.IsActive.Value ? "Mở" : "KHÓA" : "KHÓA";}
                                        <td>
                                            <a href="@Url.Action("Edit", "AdminNguoiDung", new { id = item.ID })">
                                                <i class="fas fa-info"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "AdminNguoiDung", new {id = item.ID})">
                                                <i class="far fa-trash-alt"></i>
                                            </a>
                                        </td>
                                        <td class="">  @Html.DisplayFor(modelItem => item.Usernames)</td>
                                        <td>  @Html.DisplayFor(modelItem => item.NhaKhoaHoc.HoNKH) @Html.DisplayFor(modelItem => item.NhaKhoaHoc.TenNKH) </td>
                                        <td>  @Html.DisplayFor(modelItem => item.ChucNang.TenChucNang)</td>
                                        <td> @status </td>
                                        <td>
                                            <a href="@Url.Action("UnLock", "AdminNguoiDung", new {id = item.ID})">
                                                Khóa/Mở Khóa
                                            </a>
                                        </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model WebQLKhoaHoc.Models.NguoiDungViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 class="text-center">Người dùng</h1>
        <hr />
        <div class="row">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Tên người dùng:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="Username" />
                </div>
            </div>
            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Mật khẩu:</h4>
                <div class="col-md-7">
                    <input type="password" required class="form-control" name="Password" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Vai trò:</h4>
                <div class="col-md-7">
                    @Html.DropDownList("MaChucNang", ViewBag.MaChucNang as SelectList, new { @class = "form-control" })
                </div>
            </div>

        
            <div class="form-group">
                <div class="col-md-offset-3 col-md-7">
                    @Html.ActionLink("Trở về", "Index", "AdminNguoiDung", null, new { @class = "pull-right btn btn-default" })
                    <input type="submit" value="Create" class="btn btn-default pull-right" />
                </div>
            </div>
        </div>
    </div>
}


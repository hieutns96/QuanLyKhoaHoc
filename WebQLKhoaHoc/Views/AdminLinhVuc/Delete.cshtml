@model WebQLKhoaHoc.LinhVuc

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


<h1 class="text-center">Bạn có chắn chắn muốn xóa các thông tin bên dưới</h1>
<div class="form-horizontal">
    <hr />
    <h1 class="text-center">Lĩnh vực</h1>
    <br />
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên lĩnh vực</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.TenLinhVuc, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên nhóm lĩnh vực</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.NhomLinhVuc.TenNhomLinhVuc, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Xóa" class="btn btn-default pull-right" />
            </div>
        </div>
    }
</div>

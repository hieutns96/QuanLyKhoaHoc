@model WebQLKhoaHoc.LinhVuc

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 class="text-center">Phân loại tạp chí</h1>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-2 col-md-offset-1">
                <h2>@Html.DisplayNameFor(model => model.TenLinhVuc)</h2>
            </div>
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.TenLinhVuc, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TenLinhVuc)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 col-md-offset-1">
                <h2>@Html.DisplayNameFor(model => model.NhomLinhVuc.TenNhomLinhVuc)</h2>
            </div>
            <div class="col-md-7">
                @Html.DropDownList("MaNhomLinhVuc", ViewBag.MaNhomLinhVuc as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaNhomLinhVuc)
            </div>
        </div>   

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Create" class="btn btn-default pull-right" />
            </div>
        </div>
    </div>
}

@model WebQLKhoaHoc.ChuyenMon

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}

<h1 class="text-center">Bạn có chắn chắn muốn xóa các thông tin bên dưới</h1>
<div class="form-horizontal">
    <hr />
    <h1 class="text-center">Chuyên môn nhà khoa học</h1>
    <br />
    <div class="form-group">
        @Html.TextBoxFor(model => model.TenChuyenMon, new { @class = "form-control", @disabled = "disabled" })
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Xóa" class="btn btn-default pull-right" />
            </div>
        </div>
    }
</div>
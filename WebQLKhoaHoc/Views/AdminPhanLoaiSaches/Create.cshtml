@model WebQLKhoaHoc.PhanLoaiSach

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
    <div class="form-horizontal">
        <h1 class="text-center">Phân loại sách giáo trình</h1>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="col-md-2 col-md-offset-1">
                <h2>Tên loại</h2>
            </div>
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.TenLoai, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.TenLoai)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Save" class="btn btn-default pull-right" />
            </div>
        </div>
    </div>
}

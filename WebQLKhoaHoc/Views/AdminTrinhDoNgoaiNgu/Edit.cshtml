@model WebQLKhoaHoc.TrinhDoNgoaiNgu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 class="text-center">Ngoại ngữ</h1>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model=>model.MaTrinhDoNN)
        <div class="form-group">
            <div class="col-md-2 col-md-offset-1">
                <h2>Tên ngoại ngữ</h2>
            </div>
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.TenTrinhDo, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.TenTrinhDo)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 col-md-offset-1">
                <h2>Cấp độ ngoại ngữ</h2>
            </div>
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.CapDo, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.CapDo)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Lưu" class="btn btn-default pull-right" />
            </div>
        </div>
    </div>
}



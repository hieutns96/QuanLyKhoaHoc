@model WebQLKhoaHoc.NhaKhoaHoc

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


<h1 class="text-center">Bạn có chăc lá muốn xóa thông tin bên dưới?</h1>
<div class="form-horizontal">
    <hr />
    <h1 class="text-center">Thông tin nhà khoa học</h1>
    <br />

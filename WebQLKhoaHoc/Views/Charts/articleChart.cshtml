@model WebQLKhoaHoc.Models.DonViTablesViewModel

@{
    ViewBag.Title = "Bài báo nghiên cứu khoa học";
    Layout = "~/Views/Shared/_MainPage.cshtml";
}

<div class="main-content">
    <!-- Section: About -->
    <section class="">
        <div class="container">
            <div class="section-content">
                <div class="panel">
                    <div class="panel-body">

                        <form action="articleChart" class="form-horizontal" method="post" accept-charset="utf-8">
                            <div class="form-group">
                                <div class="col-md-2 text-right">
                                    <label class="control-label">Tiêu chí:</label>
                                </div>
                                <div class="col-md-9">
                                    <select name="unit" class="form-control">
                                        <option value="total" selected>Đơn Vị</option>
                                        <option value="fieldSector">Nhóm Lĩnh vực</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2 text-right">
                                    <label class="control-label">Từ ngày:</label>
                                </div>
                                <div class="col-md-3">
                                    <input type="text" class="form-control  date-picker" name="from_date" id="Fromdate" value="" autocomplete="off">
                                </div>
                                <div class="col-md-2 text-right">
                                    <label class="control-label">Đến ngày:</label>
                                </div>
                                <div class="col-md-3">
                                    <input type="text" class="form-control date-picker" name="to_date" id="Todate" value="" autocomplete="off">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-2"></div>
                                <div class="col-md-9">
                                    <button type="submit" class="btn btn-primary">Thống kê</button>
                                </div>
                            </div>
                        </form>
                        @if (Model != null)
                        {
                        <div class="table-responsive" style="overflow-x:scroll">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    @foreach (var header in Model.Header)
                                    {
                                        <th style="font-size:14px">@header</th>
                                    }
                                </tr>
                                </thead>
                                <tbody>
                                @for (int i = 0; i < Model.Rows.Count; i++)
                                {
                                    <tr>
                                       
                                        @for (int j = 0; j < Model.Rows[i].Count; j++)
                                        {

                                            if (Convert.ToInt32(Model.Rows[i][j]) > 0)
                                            {
                                                <td>@Convert.ToInt32(Model.Rows[i][j])</td>
                                            }
                                            else
                                            {
                                                @:<td>-</td>
                                            }
                                        }
                                    </tr>
                                }
                                </tbody>
                               
                            </table>
                        </div>
                        }

                    </div>

                </div>
            </div>
        </div>
    </section>
</div>

@model Dictionary<string, int>
@{
    ViewBag.Title = "Bài báo nghiên cứu khoa học";
    Layout = "~/Views/Shared/_MainPage.cshtml";
}

<div class="main-content">
    <!-- Section: About -->
    <section class="">
        <div class="container">
            <div class="section-content">
                <div class="panel">
                    <div class="panel-body">

                        <form action="topicChart" class="form-horizontal" method="post" accept-charset="utf-8">
                            <div class="form-group">
                                <div class="col-md-2 text-right">
                                    <label class="control-label">Tiêu chí:</label>
                                </div>
                                <div class="col-md-9">
                                    <select name="unit" class="form-control">
                                        <option value="total" selected>Tổng hợp</option>
                                        <option value="fieldSector">Nhóm Lĩnh vực</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2 text-right">
                                    <label class="control-label">Từ ngày:</label>
                                </div>
                                <div class="col-md-3">
                                    <input type="date" class="form-control  date-picker" name="from_date" id="Fromdate" value="" autocomplete="off">
                                </div>
                                <div class="col-md-2 text-right">
                                    <label class="control-label">Đến ngày:</label>
                                </div>
                                <div class="col-md-3">
                                    <input type="date" class="form-control date-picker" name="to_date" id="Todate" value="" autocomplete="off">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-2"></div>
                                <div class="col-md-9">
                                    <button type="submit" class="btn btn-primary">Thống kê</button>
                                </div>
                            </div>
                        </form>


                        <div id="piechart" style="width: 900px; height: 500px;"></div>


                    </div>

                </div>
            </div>
        </div>
    </section>
</div>


@section scripts{
    @Scripts.Render("~/bundles/charts")
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);
        function drawChart() {

            var data = google.visualization.arrayToDataTable([
                ['Task', 'Hours per Day'],
                @foreach(var x in Model)
                {
                    @:["@Html.Raw(x.Key.ToString())",@x.Value],
                }
            ]);

            var options = {
                title: 'Nhóm lĩnh vực theo bài báo'
            };

            var chart = new google.visualization.PieChart(document.getElementById('piechart'));

            chart.draw(data, options);
        }
    </script>
}


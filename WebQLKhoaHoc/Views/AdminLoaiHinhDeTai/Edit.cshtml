@model WebQLKhoaHoc.LoaiHinhDeTai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
    <h1 class="text-center">Loại hình đề tài</h1>
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.MaLoaiDT)
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên loại hình đề tài</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.TenLoaiDT, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TenLoaiDT)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
            <input type="submit" value="Lưu" class="btn btn-default pull-right" />
        </div>
    </div>
</div>
}

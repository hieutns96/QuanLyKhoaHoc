@model WebQLKhoaHoc.BaiBao

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


<h1 class="text-center">Bạn có chắn chắn muốn xóa các thông tin bên dưới</h1>
<div class="form-horizontal">
    <h1 class="text-center">Sách giáo trình</h1>
    <hr />
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Mã ISSN</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.MaISSN, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên bài báo</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.TenBaiBao, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Cơ quan xuất bản</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.CQXuatBan, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Năm đăng báo</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.NamDangBao, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tập phát hàn</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.TapPhatHanh, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Số phát hành</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBox("NamBD", Model.SoPhatHanh, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Trang bài báo</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBox("NamBD", Model.TrangBaiBao, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Web liên kết</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.LienKetWeb, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>File Upload</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.LinkFileUpLoad, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Cấp tạp chí</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.CapTapChi.TenCapTapChi, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Phân loại tạp chí</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.PhanLoaiTapChi.TenLoaiTapChi, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Xóa" class="btn btn-default pull-right" />
            </div>
        </div>
    }
</div>

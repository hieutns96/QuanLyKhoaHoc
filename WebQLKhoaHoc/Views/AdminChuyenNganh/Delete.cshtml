@model WebQLKhoaHoc.ChuyenNganh

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}

<h1 class="text-center">Bạn có chắn chắn muốn xóa các thông tin bên dưới</h1>
<div class="form-horizontal">
    <hr />
    <h1 class="text-center">Chuyên ngành nhà khoa học</h1>
    <br />
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên chuyên ngành</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.TenChuyenNganh, new { @class = "form-control", @disable = "disable" })

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>ngành đào tạo</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.NganhDaoTao.TenNganhDaoTao, new { @class = "form-control", @disable = "disable" })

        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Xóa" class="btn btn-default pull-right" />
            </div>
        </div>
    }
</div>

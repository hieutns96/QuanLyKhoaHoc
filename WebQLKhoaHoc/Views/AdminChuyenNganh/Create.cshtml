@model WebQLKhoaHoc.ChuyenNganh

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h1 class="text-center">Chuyên ngành nhà khoa học</h1>
    <hr />
    @Html.ValidationSummary(true)
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên chuyên ngành</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.TenChuyenNganh, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TenChuyenNganh)
        </div>
    </div> 
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Ngành đào tạo</h2>
        </div>
        <div class="col-md-7">
            @Html.DropDownList("MaNganhDaoTao", ViewBag.MaNganhDaoTao as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaNganhDaoTao)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
            <input type="submit" value="Tạo" class="btn btn-default pull-right" />
        </div>
    </div>
</div>
}

@model IEnumerable<WebQLKhoaHoc.PhanLoaiTapChi>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                   Phân loại tạp chí
                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li class="dropdown">
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                @Html.ActionLink("Create New", "Create", "AdminPhanLoaiTapChi")
                            </li>
                        </ul>
                    </li>

                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <!-- list component  -->
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                                <thead>
                                    <tr role="row">
                                        <th>
                                            Tên đơn vị chủ trì:
                                        </th>                                       
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <!-- grid nkh  -->
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr role="row" class="even">

                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenLoaiTapChi)
                                            </td>
                                         
                                            <td>
                                                <a href="@Url.Action("Edit", "AdminPhanLoaiTapChi", new {id = item.MaLoaiTapChi})">
                                                    <i class="far fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", "AdminPhanLoaiTapChi", new {id = item.MaLoaiTapChi})">
                                                    <i class="far fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



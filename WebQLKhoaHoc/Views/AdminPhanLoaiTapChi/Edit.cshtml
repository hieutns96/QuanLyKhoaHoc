@model WebQLKhoaHoc.PhanLoaiTapChi

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.MaLoaiTapChi)
    <div class="form-horizontal">
        <h1 class="text-center">Phân loại tạp chí</h1>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-2 col-md-offset-1">
                <h2>Tên phân loại tạp chí</h2>
            </div>
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.TenLoaiTapChi, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TenLoaiTapChi)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Lưu" class="btn btn-default pull-right" />
            </div>
        </div>
    </div>
}

@model WebQLKhoaHoc.DonViQL

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h1 class="text-center">Đơn vị quản lý</h1>
    <hr />
    @Html.ValidationSummary(true)
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên đơn vị quản lý</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.TenDonVI, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(model => model.TenDonVI)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Địa chỉ cơ quan</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.DiaChiCQ, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(model => model.DiaChiCQ)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Điện thoại cơ quan</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.DienThoaiCQ, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(model => model.DienThoaiCQ)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Email cơ quan</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.EmailCQ, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(model => model.EmailCQ)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
            <input type="submit" value="Create" class="btn btn-default pull-right" />
        </div>
    </div>
</div>
}


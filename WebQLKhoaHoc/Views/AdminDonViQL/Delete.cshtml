@model WebQLKhoaHoc.DonViQL

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}

<h1 class="text-center">Bạn có chăc lá muốn xóa thông tin bên dưới?</h1>
<div class="form-horizontal">
    <hr />
    <h1 class="text-center">Đơn vị quản lý</h1>
    <br />
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên đơn vị quản lý</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.TenDonVI, new { @class = "form-control", @disable = "disable" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Địa chỉ cơ quan</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.DiaChiCQ, new { @class = "form-control", @disable = "disable" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Điện thoại cơ quan</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.DienThoaiCQ, new { @class = "form-control", @disable = "disable" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Email cơ quan</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.EmailCQ, new { @class = "form-control", @disable = "disable" })
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Delete" class="btn btn-default pull-right" />
            </div>
        </div>
    }
</div>
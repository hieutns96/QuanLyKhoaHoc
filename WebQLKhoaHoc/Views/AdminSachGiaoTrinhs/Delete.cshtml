@model WebQLKhoaHoc.SachGiaoTrinh

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


<h1 class="text-center">Bạn có chắn chắn muốn xóa các thông tin bên dưới</h1>
<div class="form-horizontal">
    <h1 class="text-center">Ngân hàng nhà khoa học</h1>
    <hr />
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Mã ISBN</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.MaISBN, new { @class = "form-control", @disabled = "disabled" })

        </div> 
    </div>

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên sách</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.TenSach, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Năm xuất bản</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.NamXuatBan, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên lĩnh vực</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.LinhVuc.TenLinhVuc, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên nhà xuất bản</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.NhaXuatBan.TenNXB, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Loại sách</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.PhanLoaiSach.TenLoai, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Xóa" class="btn btn-default pull-right" />
            </div>
        </div>
    }
</div>

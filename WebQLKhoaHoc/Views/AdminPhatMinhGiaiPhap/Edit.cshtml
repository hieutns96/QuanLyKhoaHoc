@model WebQLKhoaHoc.PhatMinhGiaiPhap

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


@using (Html.BeginForm("Edit", "AdminPhatMinhGiaiPhap", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 class="text-center">@Model.TenPM</h1>
        <hr />
        <div class="row">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.MaPM)
            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Số hiệu phát minh:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="SoHieuPM" value="@Model.SoHieuPM" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Tên phát minh:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="TenPM" value="@Model.TenPM" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Năm công bố:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="NamCongBo" value="@Model.NamCongBo" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Quốc gia cấp:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="QuocGiaCap" value="@Model.QuocGiaCap" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Đối tượng sử dụng:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="DoiTuongSuDung" value="@Model.DoiTuongSuDung" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Web liên kết:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="LinkLienKet" value="@Model.LinkLienKet" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Mô tả phát minh:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="MotaPM" value="@Model.MotaPM" multiple />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-7">
                    @Html.ActionLink("Trở về", "Index", "AdminPhatMinhGiaiPhap", null, new { @class = "pull-right btn btn-default" })
                    <input type="submit" value="Lưu" class="btn btn-default pull-right" />
                </div>
            </div>
        </div>
    </div>
}



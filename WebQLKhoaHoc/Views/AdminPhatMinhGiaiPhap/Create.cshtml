@model WebQLKhoaHoc.SachGiaoTrinh

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 class="text-center">Sách giáo trình</h1>
        <hr />
        <div class="row">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Tên chủ sở hữu:</h4>
                <div class="col-md-7">
                    @Html.DropDownList("MaChuSoHuu", ViewBag.MaNKH as SelectList, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Số hiệu phát minh:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="SoHieuPM" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Tên phát minh:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="TenPM" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Năm công bố:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="NamCongBo" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Quốc gia cấp:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="QuocGiaCap" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Đối tượng sử dụng:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="DoiTuongSuDung" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Web liên kết:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="LinkLienKet" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Mô tả phát minh:</h4>
                <div class="col-md-7">
                    <textarea required class="form-control" name="MotaPM" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-7">
                    @Html.ActionLink("Trở về", "Index", "AdminDeTai", null, new { @class = "pull-right btn btn-default" })
                    <input type="submit" value="Create" class="btn btn-default pull-right" />
                </div>
            </div>
        </div>
    </div>
}



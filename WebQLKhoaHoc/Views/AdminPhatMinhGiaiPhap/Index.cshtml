@model IEnumerable<WebQLKhoaHoc.PhatMinhGiaiPhap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    Danh sách Phát minh giải pháp
                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li class="dropdown">
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                @Html.ActionLink("Create New", "Create", "AdminPhatMinhGiaiPhap")
                            </li>
                        </ul>
                    </li>

                </ul>
                @using (Html.BeginForm("ImportCSVFile", "AdminPhatMinhGiaiPhap", FormMethod.Post, new { @class = "form-inline nav navbar-right form-label-right", @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="file" name="fileCSV" class="form-control" placeholder="CSV File">
                    <input type="submit" class="form-control" />
                }
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <!-- list component  -->
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                                <thead>
                                    <tr role="row">
                                        <th>Số hiệu phát minh</th>
                                        <th>Tên phát minh</th>
                                        <th>Năm công bố</th>
                                        <th>Quốc gia cấp</th>
                                        <th>Đối tượng sử dụng</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

                                <!-- grid nkh  -->
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr role="row" class="even">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SoHieuPM)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenPM)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NamCongBo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.QuocGiaCap)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DoiTuongSuDung)
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Edit", "AdminPhatMinhGiaiPhap", new {id = item.MaPM})">
                                                    <i class="far fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", "AdminPhatMinhGiaiPhap", new {id = item.MaPM})">
                                                    <i class="far fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




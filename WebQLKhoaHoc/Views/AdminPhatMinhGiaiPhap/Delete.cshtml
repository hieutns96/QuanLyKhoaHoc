@model WebQLKhoaHoc.PhatMinhGiaiPhap

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


<h1 class="text-center">Bạn có chắn chắn muốn xóa các thông tin bên dưới</h1>
<div class="form-horizontal">
    <h1 class="text-center">Phát minh giải pháp</h1>
    <hr />
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên phát minh</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.TenPM, new { @class = "form-control", @disabled = "disabled" })
          
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Số hiệu phát minh</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.SoHieuPM, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Mô tả phát minh</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.MotaPM, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Đối tượng sử dụng</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.DoiTuongSuDung, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Cấp phát minh</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.QuocGiaCap, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Link liên kết</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.LinkLienKet, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>

     <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Năm công bố</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBox("NamCongBo", Model.NamCongBo.Value.ToString("dd/MM/yyyy"), new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
                <input type="submit" value="Xóa" class="btn btn-default pull-right" />
            </div>
        </div>
    }
</div>
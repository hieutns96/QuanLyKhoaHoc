@model IEnumerable<WebQLKhoaHoc.DSPhatMinhNKH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}



<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    Danh sách người tham gia phát minh
                </h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <!-- list component  -->
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                                <thead>
                                    <tr role="row">

                                        <th>Tên phát minh giải pháp</th>
                                        <th>Tên nhà khoa học</th>
                                        <th>Là chủ sở hữu</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

                                <!-- grid nkh  -->
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr role="row" class="even">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PhatMinhGiaiPhap.TenPM)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NhaKhoaHoc.HoNKH) @Html.DisplayFor(modelItem => item.NhaKhoaHoc.TenNKH)
                                            </td>
                                            <td>
                                                @if (item.LaChuSoHuu == true)
                                                {
                                                    @:đúng
                                                }
                                                else
                                                {
                                                    @:sai
                                                }
                                            </td>

                                            <td>
                                                <a href="@Url.Action("EditDanhSachNguoiThamGiaPhatMinh", "AdminPhatMinhGiaiPhap", new {id = item.MaPM, manhakhoahoc = item.MaNKH})">
                                                    <i class="far fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("DeleteDanhSachNguoiThamGiaPhatMinh", "AdminPhatMinhGiaiPhap", new {id = item.MaPM, manhakhoahoc = item.MaNKH})">
                                                    <i class="far fa-trash-alt"></i>
                                                </a>
                                                <a href="@Url.Action("CreateDanhSachNguoiThamGiaPhatMinh", "AdminPhatMinhGiaiPhap", new { id = item.MaPM })" data-toggle="tooltip" title="Thêm tác giả">
                                                    <i class="fa fa-plus"></i>
                                                </a>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

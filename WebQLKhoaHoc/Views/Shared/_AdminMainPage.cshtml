                                <li>
                                    <a href="javascript:;"><i class="fa fa-newspaper"></i> Bài Báo <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu" style="display: none;">
                                        <!-- list children controllers -->
                                        <li><a href="@Url.Action("Index","AdminBaiBao")">Danh sách bài báo</a></li>
                                        <li><a href="@Url.Action("DanhSachNguoiThamGiaBaiBao","AdminBaiBao")">Danh sách người tham gia bài báo</a></li>

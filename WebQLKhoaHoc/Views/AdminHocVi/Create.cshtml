@model WebQLKhoaHoc.HocVi

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h1 class="text-center">Học vị nhà khoa học</h1>
    <hr />
    @Html.ValidationSummary(true)

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên viết tắt</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.TenVietTat, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TenVietTat)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên học vị</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.TenHocVi, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TenHocVi)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
            <input type="submit" value="Tạo" class="btn btn-default pull-right" />
        </div>
    </div>
</div>
}

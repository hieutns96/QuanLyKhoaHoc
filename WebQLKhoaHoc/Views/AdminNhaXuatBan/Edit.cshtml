@model WebQLKhoaHoc.NhaXuatBan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaNXB)
<div class="form-horizontal">
    <h1 class="text-center">Nhà xuất bản</h1>
    <hr />
    @Html.ValidationSummary(true)

    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Tên nhà xuất bản</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.TenNXB, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(model => model.TenNXB)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Địa chỉ</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.DiaChiNXB, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(model => model.DiaChiNXB)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Điện thoại</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.DienThoaiNXB, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(model => model.DienThoaiNXB)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-1">
            <h2>Web liên kết</h2>
        </div>
        <div class="col-md-7">
            @Html.TextBoxFor(model => model.DiaChiWeb, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(model => model.DiaChiWeb)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default pull-right" })
            <input type="submit" value="Save" class="btn btn-default pull-right" />
        </div>
    </div>
</div>
}
